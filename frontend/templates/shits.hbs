{{{{def name="shit"}}}}
	{{#if username}}
		<article class="shit">
			<a class="shit-user" href="profile.html?user={{username}}">
				<img src="{{profile_pic}}" class="pfp" />
				<span>
					<div>
						{{display_name}}
					</div>
					<small>
						@{{username}}
					</small>
				</span>
			</a>
			<div>
				{{{text}}}
				{{#if embedimg}}
					<img class="embed" src="{{embedurl}}" />
				{{/if}}
				{{#if embedvideo}}
					<video class="embed" controls>
						HTML vido is unsupported? wtf is wrong with you, update your browser
						<source src="{{embedurl}}">
					</video>
				{{/if}}
				
				{{#if quote_shit}}
					{{> shit quote_shit}}
				{{/if}}
			</div>
		</article>
	{{/if}}
{{{{/def}}}}

{{#shits}}
	{{> shit}}
{{/shits}}
